{
  "build": {
    "builder": "nixpacks"
  },
  "nixpacks": {
    "phases": {
      "setup": {
        "packages": ["python311", "pip"]
      },
      "install": {
        "cmds": ["python3 -m pip install --upgrade pip", "pip install -r requirement.txt"]
      },
      "start": {
        "cmd": "uvicorn main:app --host 0.0.0.0 --port 8000"
      }
    }
  }
}
